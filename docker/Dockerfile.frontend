# Frontend Dockerfile for production build
FROM node:18-alpine AS frontend

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src ./src
COPY next.config.ts ./
COPY tsconfig.json ./
COPY tailwind.config.ts ./
COPY postcss.config.js ./

# Build for production
RUN npm run build

# Next.js with distDir: 'dist' will output to /app/dist
# No need to copy, it's already in the right place
