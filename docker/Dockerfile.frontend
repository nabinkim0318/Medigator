# Frontend Dockerfile for production build
FROM node:18-alpine AS frontend

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . ./

# Build for production
RUN npm run build

# Next.js with distDir: 'dist' will output to /app/dist
# No need to copy, it's already in the right place
