# Doctor Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY src ./src
COPY next.config.ts ./
COPY tsconfig.json ./
COPY tailwind.config.ts ./
COPY postcss.config.js ./

# Build doctor-specific frontend
ENV NEXT_PUBLIC_APP_TYPE=doctor
RUN npm run build

# Expose port 3001
EXPOSE 3001

# Start doctor frontend
CMD ["npm", "run", "start:doctor"]
