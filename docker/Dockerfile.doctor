# Doctor Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . ./

# Build doctor-specific frontend
ENV NEXT_PUBLIC_APP_TYPE=doctor
RUN npm run build

# Expose port 3001
EXPOSE 3001

# Start doctor frontend
CMD ["npm", "run", "start:doctor"]
